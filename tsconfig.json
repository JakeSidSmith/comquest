{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types/",
      "./@types/"
    ],
    "baseUrl": "./src/"
  },
  "include": [
    "./src/",
    "./tests/",
    "./examples/"
  ]
}
